
@model IndexModel



<div class="panel">
    <div class="panel-header">Preview Your E-card.</div>
    <div class="panel-body">
        <div class="to">
            <div class="form-group">
                <label asp-for="bridgeGreetings.RecipientName" class="col-2"></label>
                <div class="col-10">

                    @Model.bridgeGreetings.RecipientName
                </div>
            </div>
        

            <div class="form-group">
                <label asp-for="bridgeGreetings.RecipientEmail" class="col-2"></label>
                <div class="col-10">
                    @Model.bridgeGreetings.RecipientEmail
                </div>
            </div>



            <div class="custom">
                <div class="form-group">
                    <label class="col-2" asp-for="bridgeGreetings.Subject"></label>
                    <div class="col-10">
                        <input type="text" asp-for="bridgeGreetings.Subject" placeholder="" class="form-control" maxlength="100" />
                        <div asp-validation-for="bridgeGreetings.subject" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.Mesg" class="col-2"></label>
                    <div class="col-10">
                        <textarea asp-for="bridgeGreetings.Mesg" class="form-control" placeholder="Personalize your message here." maxlength="140"></textarea>
                        <div asp-validation-for="bridgeGreetings.mesg" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>

            </div>



            <div class="from">
                <div class="form-group">
                    <label asp-for="bridgeGreetings.SenderName" class="col-2"></label>
                    <div class="col-10">
                        <input type="text" asp-for="bridgeGreetings.SenderName" placeholder="Your name" class="form-control" />
                        <div asp-validation-for="bridgeGreetings.fromName" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="bridgeGreetings.SenderEmail" class="col-2">Email:</label>
                    <div class="col-10">
                        <input type="email" asp-for="bridgeGreetings.SenderEmail" class="form-control" />
                        <div asp-validation-for="bridgeGreetings.fromEmail" class="text-danger"></div>
                        <div class="countdown"></div>
                    </div>
                </div>
            </div>
        </div>

    </div>



