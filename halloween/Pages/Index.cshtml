@page
@model IndexModel



<h2>Your Halloween Greeting</h2>
<img src="~/images/pumkins.jpg" />



            @Html.Partial("_Form")
            @Html.Partial("_Preview")
            @Html.Partial("_Layout")
            @Html.Partial("ValidationScriptsPartial.cshtml")
           
<div class="container-fluid">
    <div class="row">
        <div class="card col-sm-6 col-md-6 col-lg-6">
            <img src="~/images/halloween.jpg" class="img-responsive" />
        </div>
        <div class="entry col-sm-6 col-md-6 col-lg-6">

            @if (Model.isPreviewPage)
            {
                @Html.Partial("_Preview")
            }
            else
            {
                @Html.Partial("_Form")



                @section Scripts {
                    <script src="~/js/ww-form-character-countdown.js"></script>
                    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
                }
            }

        </div>
    </div>
</div>


